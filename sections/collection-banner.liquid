{%- style -%}
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{%- endstyle -%}

<style>
  .video-img-text__wrapper {
    background-color: {{ section.settings.block_bg }};
  }
</style>

<section class="collection-banner section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="collection-banner__wrapper d-flex">
      <div class="collection-banner__content d-flex">
        <div class="collection-banner__content-text">
          {%- if collection.metafields.custom.custom_title != blank -%}
            <h1 class="m-0 h1 color-text text-uppercase">{{ collection.metafields.custom.custom_title }}</h1>
            {%else%}
            <h1 class="m-0 h1 color-text text-uppercase">{{ collection.title }}</h1>
          {%- endif -%}
          <div>
            <div class="collection-banner__text">
              {% if collection.description %}
                {{ collection.description }}
              {% endif %}
            </div>
          </div>
        </div>
        {%- if section.settings.marquee != blank -%}
          <div class="js-marquee-video" aria-hidden="true">
            <p>{{ section.settings.marquee }}</p>
          </div>
        {%- endif -%}
      </div>
      <div class="collection-banner__media">
        <img class="apply__video-image" src="{{ collection.image | image_url: width: 1000 }}">
        {%- if section.settings.marquee != blank -%}
          <div class="js-marquee-video-mob" aria-hidden="true">
            <p>{{ section.settings.marquee }}</p>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>


<script>


  document.addEventListener('DOMContentLoaded', () => {
    if (document.querySelector('.video-img-text__media video') != null) {
      const video = document.querySelector('.video-img-text__media video');
      const videoPlay = document.querySelector('.video-img-text__media svg');
      const videoOverlay = document.querySelector('.apply__video-overlay');

      videoPlay.addEventListener('click', function() {
        videoPlay.classList.add('hide');
        videoOverlay.classList.add('hide');
        video.setAttribute('controls', 'true')
        video.play();
      })
    }
  });

  function MarqueeVideo(selector, speed) {
    const parentSelector = document.querySelector(selector);
    const clone = parentSelector.innerHTML;
    const firstElement = parentSelector.children[0];
    let i = 0;
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);

    setInterval(function () {
      firstElement.style.marginTop = `-${i}px`;
      if (i > firstElement.clientHeight) {
        i = 0;
      }
      i = i + speed;
    }, 0);
  }

  window.addEventListener('load', MarqueeVideo('.js-marquee-video', 0.2))

  function MarqueeVideoMob(selector, speed) {
    const parentSelector = document.querySelector(selector);
    const clone = parentSelector.innerHTML;
    const firstElement = parentSelector.children[0];
    let i = 0;
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);
    parentSelector.insertAdjacentHTML('beforeend', clone);

    setInterval(function () {
      firstElement.style.marginLeft = `-${i}px`;
      if (i > firstElement.clientWidth) {
        i = 0;
      }
      i = i + speed;
    }, 0);
  }

  window.addEventListener('load', MarqueeVideoMob('.js-marquee-video-mob', 0.1))



</script>

