{%- style -%}
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{%- endstyle -%}



<section class="collection-nav section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="collection-nav__wrapper d-flex flex-wrap">
      {%- for link in section.settings.menu.links -%}
        <div>
          <a href="{{ link.url }}" class="text-uppercase {% if link.current %} active{% endif %}">
            {{- link.title -}}
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>




{% schema %}
{
  "name": "Collection Nav",
  "settings": [
    {
      "type": "header",
      "content": "CONTENT"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Collection Nav",
      "category": "New"
    }
  ]
}
{% endschema %}
