{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'section-accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
.section--{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mob | append: 'px' }};
    padding-bottom: {{ section.settings.padding_bottom_mob | append: 'px' }};
}
.section--{{ section.id }} .section-accordion {
    background-color: {{ section.settings.background_color }};
}
@media (min-width: 750px) {
    .section--{{ section.id }} {
        padding-top: {{ section.settings.padding_top | append: 'px' }};
        padding-bottom: {{ section.settings.padding_bottom | append: 'px' }};
    }
}
{%- endstyle -%}

<div class="section--{{ section.id }}">
    <div class="page-width">
        <div class="section-accordion">
            {%- for block in section.blocks -%}
                <div class="accordion__product">
                    {% if block.settings.accordion_title != blank %}
                      <div class="accordion__product-item{% if forloop.first and section.settings.open_first %} open{% endif %}">
                        {% render 'icon-accordion', icon: block.settings.icon %}
                        <div class="accordion__product-title">
                          <h2>{{ block.settings.accordion_title }}</h2>
                          <span class="accordion__product-plus"></span>
                        </div>
                        <div class="accordion__product-content">
                          <p>{{ block.settings.accordion_content }}</p>
                        </div>
                      </div>
                    {% endif %}
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>

