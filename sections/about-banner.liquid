{%- style -%}
  .about__banner-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
{%- endstyle -%}

<div class="about__banner page-width about__banner-{{ section.id }}-padding js-about-banner-slider-init">
	<div class="swiper-wrapper">
		{% for block in section.blocks %}
			{% case block.type %}
				{% when 'banner' %}
					<div class="swiper-slide">
						<img class="about__banner-img" src="{{ block.settings.image | img_url: 'master' }}">
					</div>
			{% endcase %}
		{% endfor %}
	</div>
	<div class="swiper-pagination about__dots"></div>
</div>

{% schema %}
{
  "name": "About Banner",
  "tag": "section",
  "class": "section about",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 10
    }
  ],
  "blocks": [
    {
      "name": "Banner Image",
      "type": "banner",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
	"presets": [
    {
      "name": "About Banner"
    }
  ]
}
{% endschema %}
