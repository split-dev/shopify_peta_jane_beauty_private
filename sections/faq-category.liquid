{% schema %}
  {
    "name": "FAQ by Category",
    "settings": [
      {
      "type": "header",
      "content": "See the global settings: FAQ section by Category"
      },
      {
        "type": "color",
        "id": "faq_background",
        "label": "FAQ background",
        "default": "#F0E4D7"
      },
      {
      "type": "text",
      "id": "main_title",
      "label": "Section title (option)"
      },
      {
        "type": "text",
        "id": "faq_title",
        "label": "FAQ title",
        "default": "FAQ"
      }
    ],
    "blocks": [
      {
        "type": "buy_buttons",
        "name": "t:sections.main-product.blocks.buy_buttons.name",
        "limit": 1,
        "settings": [
          {
            "type": "checkbox",
            "id": "show_dynamic_checkout",
            "default": true,
            "label": "t:sections.main-product.blocks.buy_buttons.settings.show_dynamic_checkout.label",
            "info": "t:sections.main-product.blocks.buy_buttons.settings.show_dynamic_checkout.info"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FAQ by Category"
      }
    ]
  }
{% endschema %}
